<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AsoSqlite.Mobile.Views.InicioView"
             Title="Inicio">
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="fondoap.png"
                HeightRequest="185"
                Aspect="AspectFit" />

            <Label Text="Bienvenido" FontAttributes="Bold" FontSize="24" HorizontalOptions="Center" />

            <Label Text="Sistema de Asociacion" FontAttributes="Bold" FontSize="18" HorizontalOptions="Center" />

            <Button
                Text="Ver Perfil" 
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>